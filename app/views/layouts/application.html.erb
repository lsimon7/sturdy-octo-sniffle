<!DOCTYPE html>
<html>
  <head>
    <title>Memes "R' Us</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    <nav class="navbar navbar-success">
  
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><%= image_tag 'amusement-park.png', alt: 'The Mad Icon' %></a>
    </div>
    <ul class="nav navbar-nav">
      
      <li><%= button_to 'Login', login_path, method: :create , class:"btn btn-primary" %></li>
      
<% if session[:user_id] %>
<li><%= link_to 'Orders', orders_path , class: "btn btn-success" %></li>
<li><%= link_to 'Carts', carts_path , class: "btn btn-warning" %></li>
<li><%= link_to 'Products', products_path %></li>
<li><%= link_to 'Users', users_path , class: "btn btn-danger"  %></li>
<li><%= button_to 'Logout', logout_path, method: :delete , class:"btn btn-info" %></li>
<% end %>

    </ul>
  
    </nav>
    <div>
    <%= yield %>
    
    </div>
  </body>
</html>